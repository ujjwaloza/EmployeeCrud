@model List<EmployeesCrud.Models.Employee>

<h2>Employees</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add Employee</a>

<div class="mb-3">
    <button id="editBtn" class="btn btn-warning me-2" disabled>
        Edit
    </button>

    <button id="deleteBtn" class="btn btn-danger" disabled>
        Delete
    </button>
</div>
<table class="table table-bordered table-hover table-striped align-middle mt-3">
    <thead class="table-success">
        <tr>
            <th>Select</th>
            <th>Name</th>
            <th>Gender</th>
            <th>DOB</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>
                    <input type="checkbox"
                           class="employee-checkbox"
                           value="@e.Id" />
                </td>

                <td>@e.FirstName @e.LastName</td>
                <td>@e.Gender</td>
                <td>@e.DOB.ToShortDateString()</td>
            </tr>
        }
    </tbody>

</table>
@section Scripts {
   
    <script src="~/js/index.js" asp-append-version="true" ></script>
}

@section Styles {
    
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

}

