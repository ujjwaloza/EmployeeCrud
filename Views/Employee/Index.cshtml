@model List<EmployeesCrud.Models.Employee>
@{
    var searchTerm = Context.Request.Query["searchTerm"].ToString();
    bool isSearchActive = !string.IsNullOrEmpty(searchTerm);
    bool noDataFound = isSearchActive && !Model.Any();
}
<h2>Employees</h2>

<div class="index-container">
    @* <form method="get" asp-action="Search" class="search-container" autocomplete="off">

        <input type="text" name="searchTerm"
               placeholder="Search by Name or Year (e.g. 2025)"
               value="@Context.Request.Query["searchTerm"]" />




    </form> *@
    <div class="button-container">
        @if (noDataFound)
        {
            <script>
                alert("No records found.");

                window.location.href = '@Url.Action("Index", "Employee")';
            </script>
        }
        @if (isSearchActive)
        {
            <a asp-action="Index" class="btn btn-secondary">
                Reset
            </a>
        }
        <a asp-action="Create" class="btn btn-success ">Add</a>

        <button type="button" class="btn btn-primary" onclick="openModal()">
            Search
        </button>
      
        
        <button id="editBtn" class="btn">
            Edit
        </button>

        <button id="deleteBtn" class="btn btn-danger" onclick="return confirmDelete()">
            Delete
        </button>
    </div>
   
    <div class="table-container">
        <table class="table table-bordered table-hover table-striped align-middle mt-3">
            <thead class="table-primary">
                <tr>
                    <th style="width:2px;">Select</th>
                    <th style="width:10px;">id</th>
                    <th style="width:153px">Name</th>
                    <th style="width:30px">Gender</th>
                    <th style="width:30px">DateOfBirth</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox"
                                   class="employee-checkbox"
                                   value="@e.Id" />
                        </td>
                        <td>@e.Id</td>
                        <td>@e.FirstName @e.LastName</td>
                        <td>@e.Gender</td>
                        <td>@e.DateOfBirth.ToShortDateString()</td>
                    </tr>
                }
            </tbody>

        </table>
       
    </div>
</div>
<div id="searchModal" class="modal">

    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>

        <h3>Search Employees</h3>

        <form method="get" asp-action="Search" autocomplete="off">
            <input type="text" name="searchTerm"
                   placeholder="Enter name or year..." />

            <button type="submit" class="btn search-submit">
                Search
            </button>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-danger">
                        No records found
                    </td>
                </tr>
            }
        </form>
        
    </div>

</div>
<div id="noDataModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeNoDataModal()">&times;</span>

        <h4 style="color:red;">No Records Found</h4>
        <p>No employees matched your search.</p>

        <button class="btn btn-secondary" onclick="closeNoDataModal()">
            OK
        </button>
    </div>
</div>
@section Scripts {
   
    <script src="~/js/index.js" asp-append-version="true" ></script>
}

@section Styles {
    
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

}

