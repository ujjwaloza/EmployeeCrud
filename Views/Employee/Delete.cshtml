@model EmployeesCrud.Models.Employee

<h2>Delete Employee</h2>

<h4>Are you sure you want to delete this employee?</h4>

<hr />

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-3">Gender</dt>
    <dd class="col-sm-9">@Model.Gender</dd>

    <dt class="col-sm-3">DOB</dt>
    <dd class="col-sm-9">@Model.DOB.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">

    <input type="hidden" name="employeeId" value="@Model.Id" asp-for="Id"/>

    <button type="submit" class="btn btn-warning">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>
